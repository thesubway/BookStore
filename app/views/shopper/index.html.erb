<h1>Shopper#index</h1>
<p>Find me in app/views/shopper/index.html.erb</p>

<h1>Product Catalog</h1>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image) %>
    <h3><%= product.name %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= product.price %></span>
    </div>
  </div>
<% end %>
